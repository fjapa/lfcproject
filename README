/*Código*/

%{
  #include <stdio.h>
int level;
%}

%option noyywrap
PALAVRASCHAVE else|if|int|return|void|while|string
OPERADORES [-+*/<>=,;(){}]|[{[]|[]}]
ID [a-z]|[A-Z]*
NUM [0-9][0-9]*
STR ["]([^\\"]|\\([^0-7xX]|0|[0-7]{3}|[xX][0-9a-fA-F]{2}))*["]

%x COMENT

%%
.|\n|\r
"/*"  			BEGIN( COMENT ); level = 1;
<COMENT>{ 
"/*"		{level++;}
"*/"		{if(--level == 0) BEGIN( INITIAL );}
.|\n|\r		{ECHO;}
}

{PALAVRASCHAVE}+ printf( "%s é uma palavra reservada! \n", yytext );
{OPERADORES}+ printf( "%s é um operador! \n", yytext );
{ID}+ printf( "%s Contém letra(s)! \n", yytext );
{NUM}+ printf( "%s Contém número(s)! \n", yytext );
{STR}+ printf( "%s É uma string! \n", yytext );
%%

int main(void)
{
yylex();
return 0;
}
